<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note Edition</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="../style.css">
</head>
<body>
    <!--HEADER-->
    <section class="header">
        <div class="back">
            <span class="material-symbols-outlined">arrow_back_ios</span>
        </div>
        <h1>Edit the Note</h1>
        <div class="logout">
            <span class="material-symbols-outlined">logout</span>
        </div>
    </section>

    <!--FORM-->
    <section class="new">
        <form action="/edit/<%=id%>?_method=PUT" method="post">
            <h2>Title</h2>
            <input type="text" name="title" placeholder="Title" value="<%=title%>">
            <h2>Note</h2>
            <textarea name="note" id="note" cols="30" rows="10" placeholder="Note..."><%=note%></textarea>
            <button type="submit">Update</button>
        </form>
    </section>

    <!--DELETE-->
    <form action="/delete/<%=id%>?_method=DELETE" method="post">
        <button class="fab" type="submit">
            <span class="material-symbols-outlined">delete</span>
            <h3>Delete Note</h3>
        </button>
    </form>

    <!--logout-->
    <script>
        const logout=document.querySelector(".logout");
        logout.addEventListener("click",()=>{
            window.location.href="/logout"
        });
        const back=document.querySelector(".back");
        back.addEventListener("click",()=>{
            window.location.href="/back"
        });
    </script>
    
</body>
</html>